1)  static void largest(int arr[])
    {
        int max=arr[0];
        int secMax=0;
        for(int i=0;i<arr.length;i++)
        {
            if(arr[i]>max)
            {
                secMax=max;
                max=arr[i];
            }
            else if(max>arr[i] && secMax<arr[i])
            {
                secMax=arr[i];
            }
        }
        System.out.println(max);
        System.out.println(secMax);
    }
